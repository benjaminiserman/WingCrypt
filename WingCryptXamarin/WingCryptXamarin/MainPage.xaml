<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WingCryptXamarin.MainPage"
			 BackgroundColor="#2F3136">

	<Grid RowDefinitions="*, 50">
		<AbsoluteLayout Grid.Row="0">
			<Label x:Name="explainLabel"
				   TextColor="#8E9297"
				   AbsoluteLayout.LayoutBounds=".5,.55"
				   AbsoluteLayout.LayoutFlags="PositionProportional">Click the plus button at the bottom right to add a file or folder.</Label>
		</AbsoluteLayout>
		<AbsoluteLayout Grid.Row="1">
			<Button Text="+"
					VerticalOptions="Center"
					HorizontalOptions="Center"
					BackgroundColor="Cyan"
					TextColor="White"
					Font="Consolas"
					Clicked="AddButtonClicked"
					HeightRequest="40"
					WidthRequest="40"
					CornerRadius="20"
					AbsoluteLayout.LayoutBounds=".95,.95,80,80"
					AbsoluteLayout.LayoutFlags="PositionProportional">
			</Button>
		</AbsoluteLayout>
	</Grid>

</ContentPage>
